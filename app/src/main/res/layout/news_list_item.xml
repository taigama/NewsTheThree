<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/news_item_box"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="0dp"
    android:paddingLeft="0dp"
    android:paddingTop="@dimen/news_list_content_padding">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/frame_big"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="2:1">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/item_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:paddingEnd="@dimen/news_list_half_padding">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#EEE"/>
            <ImageView
                android:id="@+id/news_image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:srcCompat="@drawable/news_bhxh"
                app:layout_constraintDimensionRatio="1.618:1"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/news_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/news_list_content_padding"
                android:paddingRight="@dimen/news_list_content_padding"
                android:text="Bảo hiểm xã hội vỡ nợ"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                android:paddingBottom="@dimen/news_list_content_padding"/>
            <TextView
                android:id="@+id/news_category"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingLeft="@dimen/news_list_content_padding"
                android:paddingRight="@dimen/news_list_content_padding"
                android:text="Tin tức xã hội"
                android:textColor="@color/colorAccent"
                app:layout_constraintBottom_toTopOf="@id/news_title"
                app:layout_constraintTop_toBottomOf="@id/news_image"/>
            <TextView
                android:id="@+id/news_date"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingLeft="@dimen/news_list_content_padding"
                android:paddingRight="@dimen/news_list_content_padding"
                android:text="1 giờ"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/news_image"/>
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintLeft_toRightOf="@id/item_left"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingStart="@dimen/news_list_half_padding">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#EEE"/>
            <ImageView
                android:id="@+id/news_image2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:srcCompat="@drawable/news_quochoi"
                app:layout_constraintDimensionRatio="1.618:1"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/news_title2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/news_list_content_padding"
                android:paddingRight="@dimen/news_list_content_padding"
                android:text="Quốc hội khoá XII thông qua nghị quyết thứ 14..."
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                android:paddingBottom="@dimen/news_list_content_padding"/>
            <TextView
                android:id="@+id/news_category2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingLeft="@dimen/news_list_content_padding"
                android:paddingRight="@dimen/news_list_content_padding"
                android:text="Chính trị"
                android:textColor="@color/colorAccent"
                app:layout_constraintBottom_toTopOf="@id/news_title2"
                app:layout_constraintTop_toBottomOf="@id/news_image2"/>
            <TextView
                android:id="@+id/news_date2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingLeft="@dimen/news_list_content_padding"
                android:paddingRight="@dimen/news_list_content_padding"
                android:text="3 ngày"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/news_image2"/>
        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>



    <TextView
        android:id="@+id/news_overview"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
</android.support.constraint.ConstraintLayout>